@{
    ViewData["Title"] = "My Reviews";
}

<div class="container text-center mt-5">
    @if (User.IsInRole("Host"))
    {
        <h2>You have no reviews to comment on</h2>
        <p class="text-muted">Currently, there are no reviews for you to comment on or dispute. Check back later!</p>
        <a href="@Url.Action("Index", "Properties")" class="btn btn-primary mt-3">Go to Home</a>
    }

    @if (User.IsInRole("Admin"))
    {
        <h2>No reviews to dispute</h2>
        <p class="text-muted">There are currently no reviews requiring dispute resolution. Check back later!</p>
        <a href="@Url.Action("Index", "Properties")" class="btn btn-primary mt-3">Go to Home</a>
    }

    @if (!User.IsInRole("Host") && !User.IsInRole("Admin"))
    {
        <h2>You haven't left any reviews</h2>
        <p class="text-muted">It looks like you haven't shared any feedback yet. Start reviewing your experiences today!</p>
        <a href="@Url.Action("Index", "Reservations")" class="btn btn-primary mt-3">Return to Your Reservations</a>
    }
</div>

@model IEnumerable<Group7FinalProject.Models.Review>

@{
    ViewData["Title"] = "Reviews";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Reviews</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Property.PropertyNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Rating)</th>
                        <th>@Html.DisplayNameFor(model => model.ReviewText)</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>@Html.DisplayNameFor(model => model.HostComments)</th>
                        }
                        <th>@Html.DisplayNameFor(model => model.DisputeStatus)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Property?.PropertyNumber</td>
                            <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                            <td>@Html.DisplayFor(modelItem => item.ReviewText)</td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>@Html.DisplayFor(modelItem => item.HostComments)</td>
                            }
                            <td>@item.DisputeStatus.ToString()</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ReviewID" class="btn btn-info btn-sm">
                                    <i class="fa fa-eye"></i> Details
                                </a>
                                @if (User.IsInRole("Customer"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ReviewID" class="btn btn-warning btn-sm">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                }
                                @if (User.IsInRole("Host") && item.DisputeStatus == DisputeStatus.NoDispute)
                                {
                                    <a asp-action="DisputeReview" asp-route-id="@item.ReviewID" class="btn btn-danger btn-sm">
                                        <i class="fa fa-exclamation-triangle"></i> Dispute
                                    </a>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="AcceptDisputeReview" asp-route-id="@item.ReviewID" class="btn btn-success btn-sm">
                                        <i class="fa fa-check"></i> Accept
                                    </a>
                                    <a asp-action="DeclineDisputeReview" asp-route-id="@item.ReviewID" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times"></i> Decline
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

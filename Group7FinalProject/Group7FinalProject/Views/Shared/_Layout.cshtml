@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" /> <!-- Font Awesome -->
    <style>
        body {
            font-family: CustomFont, sans-serif !important; /* Changes font for the entire page */
        }
        .body-content{
            color:black;
        }
        .container.body-content {
            background-color: none; /* Sets the content area to orange */
            color: black !important; /* Sets text color for navbar *
            padding: 20px; /* Adds spacing */
            border-radius: 5px; /* Rounds edges */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Adds a shadow */
        }

        .navbar {
            color: white !important; /* Sets text color for navbar */
            background-color: white;
            border-bottom: 2px solid; /* Thin line with a light gray color */
            border-bottom-color: gold;
            margin-bottom: 10px; /* Optional: Adds space below the navbar */
        }

      

            .navbar .nav-link {
                color: black !important; /* Ensures all links are white */
                
            }
    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-grey bg-grey">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                             <i class="fa-solid fa-house"></i> | Home
                        </a>
                    </li>
                    

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Reservations" asp-action="Index" class="nav-link">My Reservations</a>
                            </li>
                        }

                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Categories" asp-action="Index" class="nav-link">Categories</a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="RoleAdmin" asp-action="Index" class="nav-link">Manage Users</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Properties" asp-action="ApproveProperties" class="nav-link">Approve Properties</a>
                            </li>
                        }

                        if (User.IsInRole("Host"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Properties" asp-action="MyProperties" class="nav-link">My Properties</a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Reservations" asp-action="Index" class="nav-link">My Property Reservations</a>
                            </li>

                            
                        }
                    }
                </ul>
             
            </div>
            @await Html.PartialAsync("_LoginPartial")
        </nav>
    </div>

    <div class="container body-content">
       
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BevoBnb/p>
        </footer>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
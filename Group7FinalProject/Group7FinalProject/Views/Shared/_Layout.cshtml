@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" /> <!-- Font Awesome -->
  
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-burnt-orange fixed-top">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <i class="fas fa-house"></i> BevoBnB
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="nav-content">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Reservations" asp-action="Index" class="nav-link">My Reservations</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Reviews" asp-action="Index" class="nav-link">My Reviews</a>
                                </li>
                            }
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Categories" asp-action="Index" class="nav-link">Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="RoleAdmin" asp-action="Index" class="nav-link">Manage Users</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Properties" asp-action="ApproveProperties" class="nav-link">Approve Properties</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Reviews" asp-action="Index" class="nav-link">Disputed Reviews</a>
                                </li>
                            }
                            if (User.IsInRole("Host"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Properties" asp-action="MyProperties" class="nav-link">My Properties</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Reservations" asp-action="Index" class="nav-link">Property Reservations</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Reviews" asp-action="Index" class="nav-link">Property Reviews</a>
                                </li>
                            }
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>


    </div>

    <div class="container">
       
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BevoBnb</p>
        </footer>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BevoBnB</title>
    <!-- Stylesheets -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-burnt-orange fixed-top">
        <div class="container-fluid">
            <!-- Brand -->
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                <i class="fa-solid fa-cow"></i> BevoBnB
            </a>

            <a asp-controller="Properties" asp-action="Index" class="navbar-brand">
                <i class="fa-regular fa-building"></i> All Properties
            </a>

            <!-- Toggler for responsive view -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav me-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @* Customer Links *@
                        if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Reservations" asp-action="Index" class="nav-link">My Reservations</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Reviews" asp-action="Index" class="nav-link">My Reviews</a>
                            </li>
                        }
                        @* Admin Links *@
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Categories" asp-action="Index" class="nav-link">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="RoleAdmin" asp-action="Index" class="nav-link">Manage Users</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Properties" asp-action="ApproveProperties" class="nav-link">Approve Properties</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Reviews" asp-action="Index" class="nav-link">Disputed Reviews</a>
                            </li>
                        }
                        @* Host Links *@
                        if (User.IsInRole("Host"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Properties" asp-action="MyProperties" class="nav-link">My Properties</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Reservations" asp-action="Index" class="nav-link">Property Reservations</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Reviews" asp-action="Index" class="nav-link">Property Reviews</a>
                            </li>
                        }
                    }
                </ul>

                <!-- Login Partial -->
                <div class="d-flex align-items-center">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container" style="padding-top: 5rem;">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - <strong>BevoBnB</strong></p>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>

@using Microsoft.AspNetCore.Identity;
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Longhorn Coding Academy</title>
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" /> <!-- Font Awesome -->
</head>

@if (User.Identity.IsAuthenticated)
{
    <form asp-action="LogOff" asp-controller="Account" method="post" id="logoutForm" class="navbar-right" )>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-action="Index" asp-controller="Account" title="Manage" class="nav-link">Hello @User.Identity.Name!</a>
            </li>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
            {
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Carts" asp-action="Index" class="nav-link">
                            My Cart <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                    </li>
                </ul>
            }
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="nav-link">Log Off</span></a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-action="Register" asp-controller="Account" id="registerLink" class="nav-link">Register</a></li>
        <li><a asp-action="Login" asp-controller="Account" id="loginLink" class="nav-link">Log in <i class="fa-solid fa-right-to-bracket"></i></a></li>
    </ul>
}

@model IndexViewModel

@{
    ViewBag.Title = "Account Settings";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewBag.Title</h2>

    <div class="card">
        <div class="card-header">
            <h4>Manage Your Account</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">User Name:</dt>
                <dd class="col-sm-8">@Model.UserName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Address:</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4">Birthday:</dt>
                <dd class="col-sm-8">@Model.Birthday.ToShortDateString()</dd>

                <dt class="col-sm-4">Password:</dt>
                <dd class="col-sm-8">
                    <a asp-action="ChangePassword" class="btn btn-link">Change your password</a>
                </dd>
            </dl>

            <div class="mt-4">
                @if (User.IsInRole("Admin") || User.IsInRole("Host"))
                {
                    <a asp-action="Report" asp-controller="Reservations" class="btn btn-primary me-2">View Report</a>
                }
                <a asp-action="EditProfile" class="btn btn-secondary">Edit Profile</a>
            </div>
        </div>
    </div>
</div>

<h1>Your Cart</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Property</th>
                <th>Check-In</th>
                <th>Check-Out</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.Property.PropertyNumber</td>
                    <td>@reservation.CheckIn.ToShortDateString()</td>
                    <td>@reservation.CheckOut.ToShortDateString()</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@reservation.ReservationID" class="btn btn-danger">Remove From Cart</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

<div>
    <a asp-action="Checkout">Checkout</a>
</div>


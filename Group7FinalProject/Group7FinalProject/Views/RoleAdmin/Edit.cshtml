@model RoleEditModel
@{
    ViewBag.Title = "Edit Role";
}

<h2>Edit Role: @Model.Role.Name</h2>

@Html.ValidationSummary()

<div class="panel panel-primary">
    <div class="panel-heading">Manage Users</div>
    <table class="table table-striped">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birthday</th>
            <th>Address</th>
            <th>ID</th>
            <th>Email</th>
            <th>Hire Status</th>
            <th>Actions</th>
        </tr>
        @foreach (AppUser user in Model.RoleMembers)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Birthday.ToShortDateString()</td>
                <td>@user.Address</td>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>
                    @if (Model.Role.Name == "Admin")
                    {
                        @user.HireStatus
                    }
                </td>
                <td>
                    <!-- Action to Edit User Profile -->
                    <form asp-action="EditUserProfile" asp-controller="RoleAdmin" method="get" style="display:inline;">
                        <input type="hidden" name="email" value="@user.Email" />
                        <button type="submit" class="btn btn-primary">Edit Profile</button>
                    </form>

                    @if (Model.Role.Name == "Admin" && User.IsInRole("Admin"))
                    {
                        <!-- Fire Admin Button -->
                        <form asp-action="FireAdmin" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-danger"
                            @(user.Id == User.FindFirst("sub")?.Value || user.HireStatus == HireStatus.Fired ? "disabled" : "")>
                                Fire Admin
                            </button>
                        </form>

                        <!-- Rehire Admin Button -->
                        <form asp-action="RehireAdmin" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-success"
                            @(user.HireStatus == HireStatus.Employed ? "disabled" : "")>
                                Rehire Admin
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </table>
</div>

<a asp-action="Index" class="btn btn-success">Cancel</a>

@model IEnumerable<Group7FinalProject.Models.Property>
<link href="~/css/site.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Approve Properties";
}

<h1>Approve Properties</h1>

<p>Displaying @Model.Count() properties pending approval</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PropertyNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Category.CategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.City)</th>
            <th>@Html.DisplayNameFor(model => model.State)</th>
            <th>@Html.DisplayNameFor(model => model.WeekdayPrice)</th>
            <th>@Html.DisplayNameFor(model => model.WeekendPrice)</th>
            <th>@Html.DisplayNameFor(model => model.PropertyStatus)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PropertyNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.State)</td>
                <td>@item.WeekdayPrice.ToString("C")</td>
                <td>@item.WeekendPrice.ToString("C")</td>
                <td>@Html.DisplayFor(modelItem => item.PropertyStatus)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PropertyID" class="btn btn-info btn-sm">Details</a>
                    <form asp-action="Approve" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="propertyId" value="@item.PropertyID" />
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form asp-action="Decline" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="propertyId" value="@item.PropertyID" />
                        <button type="submit" class="btn btn-danger btn-sm">Decline</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

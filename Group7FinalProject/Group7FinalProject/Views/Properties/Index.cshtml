@model IEnumerable<Group7FinalProject.Models.Property>

@{
    ViewData["Title"] = "Index";
}

<h1>BevoBnB</h1>

<!-- Add Line to Show Category!! And also add line to show showing X out of Y properties-->
@if (User.Identity.IsAuthenticated && User.IsInRole("Host"))
    {
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    }
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ZipCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumOfBedrooms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumOfBathrooms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GuestsAllowed)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.PetFriendly)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HasParking)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumOfBedrooms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumOfBathrooms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GuestsAllowed)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PetFriendly)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HasParking)
                    </td>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Host"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PropertyID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.PropertyID">Details</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-action="Details" asp-route-id="@item.PropertyID">Details</a>
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>

@model Group7FinalProject.Models.Property

@{
    ViewData["Title"] = "Details";
}

<div class="details-container">
    <h4 class="details-title">Property Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.PropertyNumber)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.PropertyNumber)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.NumOfBedrooms)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.NumOfBedrooms)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.NumOfBathrooms)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.NumOfBathrooms)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.GuestsAllowed)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.GuestsAllowed)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.WeekdayPrice)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.WeekdayPrice)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.WeekendPrice)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.WeekendPrice)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.CleaningFee)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.CleaningFee)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.DiscountRate)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.DiscountRate)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.MinNightsForDiscount)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.MinNightsForDiscount)
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.PetFriendly)
        </dt>
        <dd class="col-sm-8 detail-value">
            <input type="checkbox" class="custom-checkbox" disabled @(Model.PetFriendly ? "checked" : "") />
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.HasParking)
        </dt>
        <dd class="col-sm-8 detail-value">
            <input type="checkbox" class="custom-checkbox" disabled @(Model.HasParking ? "checked" : "") />
        </dd>
        <dt class="col-sm-4 detail-header">
            @Html.DisplayNameFor(model => model.PropertyStatus)
        </dt>
        <dd class="col-sm-8 detail-value">
            @Html.DisplayFor(model => model.PropertyStatus)
        </dd>
    </dl>
    <h3 class="details-average-rating">Average Rating: @ViewBag.AverageRating</h3>
</div>
<div class="details-buttons">
    <a asp-action="Create" asp-controller="Reservations" asp-route-propertyID="@Model.PropertyID" class="btn btn-warning">Make a Reservation</a>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Host"))
    {
        <a asp-action="Create" asp-controller="Unavailabilities" asp-route-propertyID="@Model.PropertyID" class="btn btn-warning">Create Unavailabilities</a>
    }

    <a asp-action="Edit" asp-route-id="@Model?.PropertyID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
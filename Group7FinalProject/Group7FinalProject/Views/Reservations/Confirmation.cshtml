@model Group7FinalProject.Models.Reservation

@{
    ViewData["Title"] = "Reservation Confirmation";
}

<h2>Reservation Confirmation</h2>

<p>Thank you for your reservation! Below is your confirmation number and the details of your reservation:</p>
<p><strong>Confirmation Number:</strong> @ViewBag.ConfirmationNumber</p>

<!-- Reservation Details Table -->
<table class="table">
    <thead>
        <tr>
            <th>Property</th>
            <th>Check-In Date</th>
            <th>Check-Out Date</th>
            <th>Number of Guests</th>
            <th>Weekday Total</th>
            <th>Weekend Total</th>
            <th>Discount</th>
            <th>Stay Price</th>
            <th>Cleaning Fee</th>
            <th>Subtotal</th>
            <th>Tax</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Property.PropertyNumber</td>
            <td>@Model.CheckIn.ToShortDateString()</td>
            <td>@Model.CheckOut.ToShortDateString()</td>
            <td>@Model.NumOfGuests</td>
            <td>@Model.WeekdayTotal.ToString("C")</td>
            <td>@Model.WeekendTotal.ToString("C")</td>
            <td>@Model.DiscountAmount.ToString("C")</td>
            <td>@Model.StayPrice.ToString("C")</td>
            <td>@Model.CleaningFee.ToString("C")</td>
            <td>@Model.SubTotal.ToString("C")</td>
            <td>@Model.Tax.ToString("C")</td>
            <td>@Model.TotalPrice.ToString("C")</td>
        </tr>
    </tbody>
</table>

<!-- Navigation Options -->
<div>
    <a asp-action="Index" asp-controller="Properties" class="btn btn-warning">Return to Home</a>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
    {
        <a asp-controller="Reservations" asp-action="Index" class="btn btn-primary">View My Reservations</a>
    }
</div>

@model IEnumerable<Group7FinalProject.Models.Reservation>

@{
    ViewData["Title"] = "Reservations";
}

<h1>Reservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().ConfirmationNumber)</th>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Host"))
            {
                <th>@Html.DisplayNameFor(model => model.First().Property.PropertyNumber)</th>
            }
            <th>@Html.DisplayNameFor(model => model.First().CheckIn)</th>
            <th>@Html.DisplayNameFor(model => model.First().CheckOut)</th>
            <th>@Html.DisplayNameFor(model => model.First().NumOfGuests)</th>
            <th>@Html.DisplayNameFor(model => model.First().WeekdayTotal)</th>
            <th>@Html.DisplayNameFor(model => model.First().WeekendTotal)</th>
            <th>@Html.DisplayNameFor(model => model.First().DiscountAmount)</th>
            <th>@Html.DisplayNameFor(model => model.First().StayPrice)</th>
            <th>@Html.DisplayNameFor(model => model.First().CleaningFee)</th>
            <th>@Html.DisplayNameFor(model => model.First().SubTotal)</th>
            <th>@Html.DisplayNameFor(model => model.First().Tax)</th>
            <th>@Html.DisplayNameFor(model => model.First().TotalPrice)</th>
            <th>@Html.DisplayNameFor(model => model.First().ReservationStatus)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ConfirmationNumber)</td>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Host"))
                {
                    <td>@(item.Property != null ? item.Property.PropertyNumber : "N/A")</td>
                }
                <td>@Html.DisplayFor(modelItem => item.CheckIn)</td>
                <td>@Html.DisplayFor(modelItem => item.CheckOut)</td>
                <td>@Html.DisplayFor(modelItem => item.NumOfGuests)</td>
                <td>@item.WeekdayTotal.ToString("C")</td>
                <td>@item.WeekendTotal.ToString("C")</td>
                <td>@item.DiscountAmount.ToString("C")</td>
                <td>@item.StayPrice.ToString("C")</td>
                <td>@item.CleaningFee.ToString("C")</td>
                <td>@item.SubTotal.ToString("C")</td>
                <td>@item.Tax.ToString("C")</td>
                <td>@item.TotalPrice.ToString("C")</td>
                <td>@Html.DisplayFor(modelItem => item.ReservationStatus)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ReservationID">Details</a>
                    @if (item.ReservationStatus == ReservationStatus.Valid && item.CheckIn > DateTime.Now)
                    {
                        <a asp-action="CancelReservation" asp-route-id="@item.ReservationID">| Cancel</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
